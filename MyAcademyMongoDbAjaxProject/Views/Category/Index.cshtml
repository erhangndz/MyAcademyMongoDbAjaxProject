@model List<Category>
@{
    ViewData["Title"] = "Index";
}

<h3>Kategoriler</h3>
@{
    int count = 0;
}
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a asp-action="DeleteCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-danger">Sil</a>
                <a asp-action="UpdateCategory" asp-route-id="@item.CategoryID" class="btn btn-outline-info">Düzenle</a>
            </td>
        </tr>
    }
</table>
<br />
<a asp-action="CreateCategory"  class="btn btn-outline-dark">Yeni Kategori Ekle</a>